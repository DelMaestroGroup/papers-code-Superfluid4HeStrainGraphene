####################################################################################
# 
# Helvetica Font Stylesheet
# 
####################################################################################

### FONT
font.size           : 18.0
font.family         : sans-serif
font.sans-serif     : Helvetica Neue
font.weight         : light
text.hinting        : auto
text.hinting_factor : 8

axes.prop_cycle: cycler('color', ['5E4Fa2', '3C93B8', '79C9A4', 'C2E69F', 'F1F9AA', 'FEEC9F', 'FDBB6C', 'F57949', 'D7414E', '9E0142'])


### LaTeX customizations. See http://www.scipy.org/Wiki/Cookbook/Matplotlib/UsingTex
text.usetex         :  False # use latex for all text handling. The following fonts
                              # are supported through the usual rc parameter settings:
                              # new century schoolbook, bookman, times, palatino,
                              # zapf chancery, charter, serif, sans-serif, helvetica,
                              # avant garde, courier, monospace, computer modern roman,
                              # computer modern sans serif, computer modern typewriter
                              # If another font is desired which can loaded using the
                              # LaTeX \usepackage command, please inquire at the
                              # matplotlib mailing list

### Use Helvetica for Math Text

mathtext.fontset : custom
mathtext.rm : Helvetica Neue:light
mathtext.it : Helvetica Neue:italic
mathtext.bf : Helvetica Neue:bold

### AXES
axes.labelsize      : 16     # fontsize of the x any y labels
axes.linewidth      : 0.35    # edge linewidth
axes.labelpad       : 2.0
axes.labelweight    : light
axes.titlesize      : 18
#
#axes.xmargin        : 0       # x margin.  See `axes.Axes.margins`
#axes.ymargin        : 0 

### LINES
lines.linewidth     : 2.0
lines.markeredgewidth: 1.0
lines.dash_joinstyle : round        # miter|round|bevel
lines.dash_capstyle : round          # butt|round|projecting
lines.solid_joinstyle : round       # miter|round|bevel
lines.solid_capstyle : round        # butt|round|projecting
lines.markersize    : 5             # default marker size

### TICKS
# see http://matplotlib.org/api/axis_api.html#matplotlib.axis.Tick
xtick.major.size     : 4      # major tick size in points
xtick.major.width    : 0.35    # major tick width in points
xtick.minor.size     : 0      # minor tick size in points
xtick.major.pad      : 3      # distance to major tick label in points
xtick.minor.pad      : 3      # distance to the minor tick label in points
xtick.labelsize      : 16      # fontsize of the tick labels

ytick.major.size     : 4    # major tick size in points
ytick.major.width    : 0.35    # major tick width in points
ytick.minor.size     : 0      # minor tick size in points
ytick.major.pad      : 3      # distance to major tick label in points
ytick.minor.pad      : 3      # distance to the minor tick label in points
ytick.labelsize      : 16 # fontsize of the tick labels

### Legend
legend.fontsize      : 14
legend.frameon       : False   # whether or not to draw a frame around legend
legend.handlelength  : 1.0      # the length of legend lines

### FIGURE
# See http://matplotlib.org/api/figure_api.html#matplotlib.figure.Figure
figure.figsize   : 6.8,4.2    # figure size in inches
figure.subplot.bottom: 0.15
figure.subplot.left: 0.15
figure.subplot.right: 0.95
figure.subplot.top: 0.92

savefig.transparent :  True     # transparent figures
savefig.dpi         : 300     # figure dots per inch
savefig.bbox        : tight     # 'tight' or 'standard'.
savefig.pad_inches  : 0.01       # Padding to be used when bbox is set to 'tight'

pdf.fonttype       : 42